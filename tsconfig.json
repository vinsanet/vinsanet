{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vuetify", "vite/client"],
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ]
}
